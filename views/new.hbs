<div class="container">
  <div class="row">
    <div class="row col-md-8 col-xl-6 mx-auto">
      <div class="col-md-4 d-md-flex d-none align-items-center">
        必填欄位
      </div>
      <div class="col-md-8 d-flex justify-content-center">
        <h1>請輸入你的支出</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="row col-md-8 col-xl-6 mx-auto">
      <div class="d-md-none">
        必填欄位
      </div>
    </div>
  </div>
  <form action="/expenses" method="post">
    <div class="row mb-2">
      <div class="row col-md-8 col-xl-6 mx-auto">
        <div class="col-md-4 d-flex align-items-center">
          <label for="name" class="form-label m-0">名稱</label>
        </div>
        <div class="col-md-8">
          <input type="text" id="name" name="name" class="form-control" placeholder="支出項目名稱">
        </div>
      </div>
    </div>

    <div class="row mb-2">
      <div class="row col-md-8 col-xl-6 mx-auto">
        <div class="col-md-4 d-flex align-items-center">
          <label for="date" class="form-label m-0">日期</label>
        </div>
        <div class="col-md-8">
          <input type="date" name="date" id="date" class="form-control">
        </div>
      </div>
    </div>

    <div class="row mb-2">
      <div class="row col-md-8 col-xl-6 mx-auto">
        <div class="col-md-4 d-flex align-items-center">
          <label for="categoryId" class="form-label m-0">類別</label>
        </div>
        <div class="col-md-8">
          <select name="categoryId" id="categoryId" class="form-select">
            {{#each categories as |category|}}
            <option value="{{category.id}}">{{category.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>

    <div class="row mb-2">
      <div class="row col-md-8 col-xl-6 mx-auto">
        <div class="col-md-4 d-flex align-items-center">
          <label for="amount" class="form-label m-0">價錢</label>
        </div>
        <div class="col-md-8">
          <input type="number" name="amount" id="amount" class="form-control">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="row col-md-8 col-xl-6 mx-auto">
        <div class="col-md-8 d-flex justify-content-center ms-auto">
          <button type="submit">新增支出</button>
        </div>
      </div>
    </div>
  </form>

</div>